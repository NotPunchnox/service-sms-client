<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>

<style>
    @import url('https://fonts.googleapis.com/css?family=Niramit:300,300i,700');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'K2D', sans-serif;
        background: #1e1e2f;
        letter-spacing: 1px;
    }

    .content {
        max-width: 1024px;
        width: 100%;
        padding: 0 4%;
        padding-top: 170px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 100%;
        max-width: 400px;
        min-width: 100px;
        max-height: 600px;
        min-height: 300px;
        height: 600px;
        margin: 0 auto;
        border-radius: 10px;
        box-shadow: 0px 0px 35px 0px #000;
        border: none;
        position: relative;
        text-align: center;
        background-image: radial-gradient(circle at 0% 0%, #252736, #252736 51%, #1d1e26);
        color: #526f77;
    }

    .box .title {
        text-decoration: none;
        width: 100%;
        margin: 10px;
        text-align: center;
        margin-top: 30px;
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 4px;
    }

    input {
        margin: 10px;
        max-width: 250px;
        border-style: none;
        background: transparent;
        outline: none;
    }


    h1.demo {
        text-align: center;
        font-size: 2.4rem;
        font-weight: normal;
        margin-bottom: 1rem;
        color: #f5f6ff;
    }

    a.demo {
        text-align: center;
        font-size: 1.6rem;
        font-weight: normal;
        color: rgba(202, 205, 239, 0.8);
        margin-bottom: 3rem;
    }

    .demo-flex-spacer {
        flex-grow: 1;
    }

    .container {
        display: flex;
        flex-direction: column;
        height: 100vh;
        max-width: 1600px;
        padding: 0 15px;
        margin: 0 auto;
    }

    @keyframes gradient {
        0% {
            background-position: 0 0;
        }

        100% {
            background-position: 100% 0;
        }
    }

    .webflow-style-input {
        top: 60px;
        position: relative;
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 50px;
        min-width: 50px;
        max-width: 300px;
        margin: 10px auto;
        border-radius: 10px;
        background: rgba(57, 63, 84, 0.8);
    }

    .webflow-style-input input {
        flex-grow: 1;
        color: #bfd2ff;
        font-size: 20px;
        line-height: 2.4rem;
        vertical-align: middle;
    }

    .webflow-style-input input::-webkit-input-placeholder {
        color: #7881a1;
    }

    .webflow-style-input input {
        flex-grow: 1;
        color: #bfd2ff;
        font-size: 20px;
        line-height: 2.4rem;
        vertical-align: middle;
    }

    .button {
        cursor: pointer;
        position: relative;
        color: #6eaa88;
        text-align: center;
        font-size: 20px;
        padding: 20px 70px;
        border-radius: 53px;
        background: #252736;
        box-shadow: 5px 5px 20px #1b1c27, -5px -5px 20px #2f3245;
    }

    .button:hover {
        border-radius: 53px;
        background: linear-gradient(145deg, #212331, #282a3a);
        box-shadow: 5px 5px 20px #1b1c27, -5px -5px 20px #2f3245;
    }

    .button:active {
        border-radius: 53px;
        background: #252736;
        box-shadow: inset 5px 5px 20px #1b1c27, inset -5px -5px 20px #2f3245;
    }

    a {
        position: relative;
        text-decoration: none;
        color: #969b98;
    }
</style>

<div class="content">
    <div class="box">
        <h2 class="title">Login</h2>
        <p id="message" style="color: rgb(204, 66, 66);"></p>
        <div class="webflow-style-input">
            <input autocomplete="off" placeholder="email" type="email" name="email" id="email"></input>
        </div>
        <div style="margin-top:20px;" class="webflow-style-input">
            <input placeholder="password" type="password" name="password" id="password"></input>
        </div>
        <div><input style="top: 200px;" class="button" type="submit" value="login" id="send" /></div>

        <a style="top: 250px;" href="/register">Don't have an account? Sign up.</a>
    </div>
</div>

<script>
    if (localStorage.getItem('token')) {
        request = new Request('http://localhost:3000/@me', {
            method: 'GET',
            headers: new Headers({
                'Content-Type': 'application/json',
                'token': localStorage.getItem('token')
            })
        })
        fetch(request).then(resp => resp.json().then(r => {
            if (r.code === 200 && r.token) {
                let a = window.location.origin + '/@me?tkn=' + localStorage.getItem('token')
                window.location = a
            }
        })).catch(err => console.error(err))
    }

    document.getElementById('send').addEventListener('click', (e) => {
        var message = document.getElementById('message'),
            request = new Request('http://localhost:3000/auth/login', {
                method: 'POST',
                body: JSON.stringify({
                    'email': String(document.getElementById('email').value),
                    'password': String(document.getElementById('password').value)
                }),
                headers: new Headers({
                    'Content-Type': 'application/json'
                })
            })
        fetch(request).then(resp => resp.json().then(r => {
            if (r.code === 404) return message.textContent = 'Email does not match'
            if (r.code === 403) return message.textContent = 'Password does not match'
            if (r.code !== 201) return message.textContent = r.message
            if (r.code === 201 && r.token) {
                localStorage.setItem('token', r.token)
                let a = window.location.origin + '/@me?tkn=' + localStorage.getItem('token')
                window.location = a
            }
        })).catch(err => console.error(err))
    })
</script>

</html>